<Window x:Class="Nintek.NeuralNetworks.Samples.Wpf.CopyImage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nintek.NeuralNetworks.Samples.Wpf.CopyImage"
        mc:Ignorable="d"
        Title="Copying image by neural network" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Input image:" Margin="5"/>
        <TextBlock Grid.Column="1" Text="Neural network product:" Margin="5"/>

        <Image Grid.Row="1" Source="{Binding SourceImage}"/>
        <Image Grid.Row="1" Grid.Column="1" Source="{Binding NeuralNetworkImage}"/>
    </Grid>
</Window>

    